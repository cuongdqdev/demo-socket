<html>
    <head>
        <title>Demo Socket IO</title>
        <script src="jquery.js"></script>
        <script src="socket.io/socket.io.js"></script>
        <script>
            
            var socket = io('http://localhost:3000');

            socket.on("SERVER-SEND-COLOR", function(data){
                $("body").attr("bgColor", data);
            });

            
            $(document).ready(function(){
                //alert('jquery n√®');
                $("#do").click(function(){
                    socket.emit("CLIENT-SEND-COLOR", "red");
                });

                $("#xanh").click(function(){
                    socket.emit("CLIENT-SEND-COLOR", "green");
                });

                $("#vang").click(function(){
                    socket.emit("CLIENT-SEND-COLOR", "yellow");
                });
            });
        </script>

        <style>
            #do, #xanh, #vang{width: 300px; height:70px}
            #do{background-color: red}
            #xanh{background-color: green}
            #vang{background-color: yellow}
        
        </style>
    </head>
    <body bgColor="pink">
       <div id="do"></div>
       <div id="xanh"></div>
       <div id="vang"></div>
    </body>
</html>